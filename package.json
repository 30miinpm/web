{
    "name": "aut-web-ecommerce-project",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
        "lint:fix-js": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix",
        "lint:style": "stylelint \"**/*.{js,jsx,ts,tsx,css,scss,sass}\"",
        "refactor": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,json}\"",
        "test:run": "jest -c test/jest.config.js",
        "test:watch": "jest -c test/jest.config.js --watch",
        "test:watchAll": "jest -c test/jest.config.js --watchAll",
        "test:coverage": "jest -c test/jest.config.js --coverage",
        "test:watchAndCoverage": "jest -c test/jest.config.js --coverage --watchAll",
        "build": "next build",
        "start": "next start",
        "prepare": "husky install"
    },
    "dependencies": {
        "next": "10.2.0",
        "next-compose-plugins": "^2.2.1",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "sass": "^1.32.5"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/eslint-parser": "^7.14.4",
        "@types/enzyme": "^3.10.8",
        "@types/jest": "^26.0.23",
        "@types/node": "^14.14.13",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^4.22.1",
        "@typescript-eslint/parser": "^4.22.1",
        "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
        "babel-loader": "^8.2.2",
        "dotenv": "^8.2.0",
        "enzyme": "^3.11.0",
        "eslint": "^7.15.0",
        "eslint-config-airbnb": "18.2.1",
        "eslint-config-prettier": "^7.0.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-babel": "^5.3.1",
        "eslint-plugin-cypress": "^2.11.3",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-jsx-a11y": "6.4.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.2.0",
        "eslint-plugin-promise": "^4.3.1",
        "eslint-plugin-react": "7.21.5",
        "eslint-plugin-react-hooks": "1.7.0",
        "husky": "^6.0.0",
        "identity-obj-proxy": "^3.0.0",
        "isomorphic-unfetch": "^3.1.0",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "nock": "^13.0.6",
        "prettier": "^2.2.1",
        "stylelint": "^13.13.1",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-sass-guidelines": "^8.0.0",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-prettier": "^1.2.0",
        "stylelint-scss": "^3.19.0",
        "ts-jest": "^26.4.4",
        "typescript": "^4.1.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,scss}": [
            "prettier -- --write --loglevel silent",
            "eslint -- --quiet --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
